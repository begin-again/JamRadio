-# Tracks
-# GET /v3.0/tracks

= partial :nav
- if locals[:results]
  - unless locals[:results].empty?
    .player
      #info
      %section{ id: 'audio'}
    %table.tracks
      %thead
        %tr
          %th Artist
          %th Album
          %th Name
          %th Duration
          %th D/L
          %th Type
          %th Lang
          %th Genre
      %tfoot
        %tr
          %td{colspan: 5}
          %td.nav
            %a.prev.button{onclick: "getTracks(#{locals[:backward]}, '#{locals[:query]}')"} Previous
          %td
          %td.nav
            %a.next.button{onclick: "getTracks(#{locals[:forward]}, '#{locals[:query]}')"} Next
      %tbody
        = partial :tracks, locals: locals
- else
  - if locals[:headers]
    %p= locals[:headers][:status]
    %p= locals[:headers][:error_message]
  - else
    %p Unknown Error
