%h2 Album Search

%form{action: '/albums', method: 'post'}
  %p
    %label{for: 'name'} Album Name
    %br/
    %input{id: 'name', type: 'text', name: 'name', required: '' }
  %p.sort Sort by
  %select{ name: 'sort_by'}
    %option{ value: 'name' } Name
    %option{ value: 'joindate'} Artist Join Date
    %option{ value: 'popularity_total', selected: 'selected'} Popular
    %option{ value: 'popularity_month'} Popular (Month)
    %option{ value: 'popularity_week'} Popular (Week)
  %p
    %input{type: 'submit'}
